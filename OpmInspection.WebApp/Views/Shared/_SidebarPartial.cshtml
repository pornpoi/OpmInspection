<!-- Create the tabs -->
<ul class="nav nav-tabs nav-justified control-sidebar-tabs">
    <li class="active">
        <a href="#control-sidebar-settings-tab" data-toggle="tab"><i class="fa fa-gear"></i></a>
    </li>
    <li>
        <a><i class="fa"></i></a>
    </li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryForm" }))
    {
        @Html.AntiForgeryToken()

        <!-- Setting tab content -->
        <div class="tab-pane active" id="control-sidebar-settings-tab">
            <h3 class="control-sidebar-heading">รูปแบบสกิน</h3>
            <ul class="list-unstyled clearfix">
                @foreach (var skin in (List<OpmInspection.Shared.Models.Skin>)ViewBag.Skins)
                {
                    <li class="skin-menu-item">
                        <a class="clearfix full-opacity-hover" data-skin="@skin.ClassName" href="javascript:void(0);" onclick="change_skin($(this).attr('data-skin'));">
                            <div>
                                <span class="bg-@skin.ClassName.Replace("skin-", string.Empty).Replace("-light", string.Empty)-active skin-menu-active"></span>
                                <span class="bg-@skin.ClassName.Replace("skin-", string.Empty).Replace("-light", string.Empty) skin-menu-normal"></span>
                            </div>
                            <div>
                                <span class="skin-menu-side@(skin.ClassName.Contains("-light") ? "-light" : string.Empty)"></span>
                                <span class="skin-menu-body"></span>
                            </div>
                        </a>
                        <p class="text-center no-margin">@skin.Name</p>
                    </li>
                }
            </ul>
            <!-- /.setting-sidebar-menu -->

        </div>
    }
    <!-- Controls tab content -->
    <div class="tab-pane active" id="control-sidebar-controls-tab"></div>
</div>
